{
    "name": "kysely-oracledb",
    "version": "2.0.1",
    "description": "Kysely Dialect and Type Generator for Oracle DB.",
    "author": "Griffiths Waite",
    "license": "MIT",
    "main": "dist/index.js",
    "module": "dist/index.mjs",
    "types": "dist/index.d.ts",
    "type": "module",
    "exports": {
        ".": {
            "import": {
                "types": "./dist/index.d.mts",
                "default": "./dist/esm/index.js"
            },
            "require": {
                "types": "./dist/index.d.ts",
                "default": "./dist/index.js"
            },
            "default": "./dist/index.js"
        },
        "./package.json": "./package.json"
    },
    "files": [
        "dist",
        "README.md"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/griffiths-waite/kysely-oracledb"
    },
    "keywords": [
        "sql",
        "kysely",
        "dialect",
        "oracledb"
    ],
    "scripts": {
        "build": "tsup",
        "lint": "tsc",
        "test": "vitest --coverage",
        "release": "pnpm build && changeset publish",
        "dev": "pnpm lint && node dist/dev.js"
    },
    "devDependencies": {
        "@changesets/cli": "^2.27.12",
        "@types/oracledb": "^6.5.3",
        "@vitest/coverage-istanbul": "3.0.5",
        "tsup": "^8.3.6",
        "typescript": "^5.7.3",
        "vitest": "^3.0.5"
    },
    "dependencies": {
        "prettier": "^3.4.2",
        "uuid": "^11.0.5"
    },
    "peerDependencies": {
        "kysely": "^0.27.5",
        "oracledb": "^6.7.1"
    }
}
